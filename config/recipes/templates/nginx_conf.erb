upstream app {
    server "unix:/home/astronz/www/seberov/tmp/sockets/unicorn.sock fail_timeout=0"
}

server {
    server_name 62.76.185.133
    listen 3000;
    root /home/astronz/www/seberov/public

    location ^~ /assets/ {
        gzip_static on;
        expires max;
        add_header Cache-Control public;
    }

    keepalive_timeout 10;
    client_max_body_size 4G;
    try_files $uri/index.html $uri.html $uri app

    location app {
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto http;
        proxy_redirect off;
        proxy_pass http://app
    }
}
