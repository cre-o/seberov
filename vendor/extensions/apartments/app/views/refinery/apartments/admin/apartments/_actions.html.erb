<ul>
  <% if ::Refinery::Apartments::Admin::ApartmentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.apartments_admin_apartments_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_apartments_admin_apartment_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Apartments::Admin::ApartmentsController.sortable? && ::Refinery::Apartments::Apartment.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.apartments_admin_apartments_path,
                     t('.reorder', what:  "Apartments"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.apartments_admin_apartments_path,
                      t('.reorder_done', what: "Apartments"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
