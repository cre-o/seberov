<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(apartment) -%>">
  <span class='title'>
    <%= apartment.unit_id %>

  </span>
  <span class='actions'>
    <%= action_icon(:preview, refinery.apartments_apartment_path(apartment), t('.view_live_html')) %>

    <%= action_icon(:edit,    refinery.edit_apartments_admin_apartment_path(apartment), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.apartments_admin_apartment_path(apartment), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: apartment.block)}}  ) %>
  </span>
</li>
